<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FocusApp.ViewModels"
             x:DataType="vm:DashboardViewModel"
             x:Class="FocusApp.Views.Components.FocusToggleView"
             >
    <Border StrokeShape="RoundRectangle 15"
        StrokeThickness="0"
        BackgroundColor="{Binding FocusStatusColor}"
        Padding="20"
        HeightRequest="120">

        <Border.Shadow>
            <Shadow Brush="Black" Opacity="0.2" Offset="5,5" Radius="10"/>
        </Border.Shadow>

        <Grid RowDefinitions="*, Auto">

            <Label Grid.Row="0"
               Text="{Binding ButtonText}"
               TextColor="White"
               FontSize="22"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

            <Button Grid.Row="1"
                Text="{Binding IsActive, Converter={StaticResource BoolToTextConverter}}" 
                Command="{Binding ToggleFocusCommand}"
                BackgroundColor="White"
                TextColor="{Binding FocusStatusColor}"
                FontAttributes="Bold"
                CornerRadius="20"
                Margin="0,10,0,0"/>

        </Grid>
    </Border>
</ContentView>
